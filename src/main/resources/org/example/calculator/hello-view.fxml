<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="number1" promptText="Szám 1" />
        <TextField fx:id="number2" promptText="Szám 2" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button text="+" onAction="#handleAddition" />
        <Button text="-" onAction="#handleMinus" />
        <Button text="*" onAction="#handleMultiplication" />
        <Button text="/" onAction="#handleDivision" />
        <Button text="\%" onAction="#handlePrecent" />
    </HBox>

    <Label fx:id="resultLabel" text="Eredmény: 0" style="-fx-font-size: 16px;" />
</VBox>
